<style>
    *{
    box-sizing: border-box;
    padding: 0%;
    margin: 0%;
    font-size: 26px;
    }

    p{
    text-transform: lowercase;
}
p::first-letter{
    text-transform: uppercase;
}
h1{
    text-transform: lowercase;
}
h1::first-letter{
    text-transform: uppercase;
}
h2{
    text-transform: lowercase;
}
h2::first-letter{
    text-transform: uppercase;
}
.email{
    text-transform: lowercase;
}
.email::first-letter{
    text-transform: uppercase;
}
h3{
    text-transform:capitalize;
}
h3::first-letter{
    text-transform: uppercase;
}

h4{
    text-transform: lowercase;
}
h4::first-letter{
    text-transform: uppercase;
}
textarea{
    text-transform: lowercase;
}
textarea::first-letter{
    text-transform: uppercase;
}
.separacion{
    margin-bottom: 20px;
}
    
main{
    min-width: 1240px;
    max-width: auto;
    height: auto;
    margin-left: auto;
    margin-right: auto;
}
.container{
    height: auto;
    background-color: rgb(239, 237, 237);
}
.bordeColorTop, .bordeColorBottom{
    clear: both;
    width: 100%;
    height: 70px;
    background-color: rgb(187, 149, 149);
}
img{
    width: 80%;
    margin-bottom: 30px;
    margin-top: 30px;
}
.izquierda{
    text-align: center;
    float: left;
    width: 30%;
    height: 88%;
    padding-left: 20px;
    padding-right: 10px;
    background-color: rgb(231, 222, 222);
}
.separador{
    margin-bottom: 50px;
}
.izquierda h2{
    color: rgb(187, 149, 149);
    font-weight: bolder;
    margin-bottom: 0%;
    margin-top: 5px;
    font-size: 28px;
}
.datos{
    color: rgb(57, 55, 55);
    font-weight: lighter;
}
.tituloIzq{
    color: black;
    font-weight: bolder;
    margin-top: 10px;
}
.derecha{
    float: right;
    width: 70%;
    height: 88%;
    background-color: rgb(239, 237, 237);
    text-align: justify;
    padding-top: 2vh;
    padding-right: 80px;
    padding-left:40px;
}
.black{
    color: rgb(57, 55, 55);;
}
.titulo{
    text-align: start;
    color: rgb(187, 149, 149);
    margin-left: 2vh;
    text-transform:capitalize;
    font-size: 32px;
}
.derecha h2, h3{
    color: rgb(187, 149, 149);
    text-align: start;
}
.margen{
    margin-top: 50px;
}
li{
    list-style: none;
}
hr{
    margin-bottom: 2vh;
}
table{
    width: 100%;
    height: auto;
    margin-bottom: 0px;
}

.alineacionFin{
    text-align: end;
    float: right;
}
p{
    text-align: start;
}
</style>
<title>Diseño Basico</title>
<main>
    <div class="container">
        <form action="" method="get">
            <div class="bordeColorTop"></div>
            {{#each personal}}
            <h1 class="titulo">{{this.nombre}} {{this.apellido}}</h1>
            <hr>
            {{/each}}
            <div class="izquierda">
                {{#each user}}
                    <img src="http://localhost:3000/img/perfiles/{{imagen}}">
                {{/each}}

                <h2>Datos personales</h2>
                <hr class="separador">
                {{#each personal}}
                    <h3 class="tituloIzq">Nombre</h3>
                    <h3 class="datos" name="nombre">{{this.nombre}} {{this.apellido}}</h3>
                    <br>
                {{/each}}

                {{#each user}}
                    <h3 class="tituloIzq">Correo electrónico</h3>
                    <h3 class="datos email">{{this.email}}</h3>
                {{/each}}

                {{#each personal}}
                    <br>
                    <h3 class="tituloIzq">Teléfono</h3>
                    <h3 class="datos" name="telefono">{{this.telefono}}</h3>
                    <br>
                    <h3 class="tituloIzq">Dirección</h3>
                    <h3 class="datos">{{this.calle}} {{this.altura}}, {{this.pais}}</h3>
                {{/each}}
            </div>

            <div class="derecha">
                <h2>Perfíl</h2>
                <hr>
                {{#each descripcionData}}
                    <p name="descripcionPerfil">{{this.descripcionPerfil}}</p>
                {{/each}}

                <h2 class="margen">Experiencia</h2>
                {{#each laboralData}}
                    <hr>
                    <table>
                        <tr>
                            <th>
                                <h3 class="black">{{this.puesto}}</h3>
                            </th>
                            <th rowspan="2" class="alineacionFin">
                                <h3>{{this.desde}}{{this.hasta}}</h3>
                            </th>
                        </tr>
                        <tr>
                            <td><h3>{{this.empresa}}</h3></td>
                        </tr>
                        <tr>
                            <td><p class="separacion">{{this.descripcion}}</p></th>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th>
                                <h3 class="black">{{this.puesto2}}</h3>
                            </th>
                            <th rowspan="2" class="alineacionFin">
                                <h3>{{this.desde2}}{{this.hasta2}}</h3>
                            </th>
                        </tr>
                        <tr>
                            <td><h3>{{this.empresa2}}</h3></td>
                        </tr>
                        <tr>
                        <td><p class="separacion">{{this.descripcion2}}</p></td>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th><h3 class="black">{{this.puesto3}}</h3></th>
                            <th rowspan="2" class="alineacionFin">
                                <h3>{{this.desde3}}{{this.hasta3}}</h3>
                            </th>
                        </tr>
                        <tr>
                            <td><h3>{{this.empresa3}}</h3></td>
                        </tr>
                        <tr>
                            <td><p class="separacion">{{this.descripcion3}}</p></th>
                        </tr>
                    </table>

                    <h2 class="margen">Formación</h2>
                    <hr>
                    <table>
                        <tr>
                            <th><h3 class="black">{{this.carrera}}</h3></th>
                            <th rowspan="2" class="alineacionFin">
                                <h3>{{this.finalizado}}</h3>
                            </th>
                        </tr>
                        <tr>
                            <td><h3 class="separacion">{{this.instituto}}</h3></td>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th><h3 class="black">{{this.carrera2}}</h3></th>
                            <th rowspan="2" class="alineacionFin">
                                <h3>{{this.finalizado2}}</h3>
                            </th>
                        </tr>
                        <tr>
                            <td><h3 class="separacion">{{this.instituto2}}</h3></td>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th><h3 class="black">{{this.carrera3}}</h3></th>
                            <th rowspan="2" class="alineacionFin">
                                <h3>{{this.finalizado3}}</h3>
                            </th>
                        </tr>
                        <tr>
                            <td><h3 class="separacion">{{this.instituto3}}</h3></td>
                        </tr>
                    </table>

                    <h2 class="margen">Idiomas</h2>
                    <hr>
                    <table class="idiomas">
                        <tr>
                            <th><p>{{this.idioma}}</p></th>
                            <th class="alineacionFin"><p class="separacion">{{this.nivel}}</p></th>
                        </tr>
                    </table>
                    <table class="idiomas">
                        <tr>
                            <th><p>{{this.idioma2}}</p></th>
                            <th class="alineacionFin"><p class="separacion">{{this.nivel2}}</p></th>
                        </tr>
                    </table>
                    <table class="idiomas">
                        <tr>
                            <th><p>{{this.idioma3}}</p></th>
                            <th class="alineacionFin"><p class="separacion">{{this.nivel3}}</p></th>
                        </tr>
                    </table> 
                {{/each}}
            </div>
        <div class="bordeColorBottom"></div>
        </form>
    </div>
</main>



