<style>
    *{
    box-sizing: border-box;
    padding: 0%;
    margin: 0%;
    font-size: 26px;
}
p{
    text-transform: lowercase;
    font-weight: lighter;
}
p::first-letter{
    text-transform: uppercase;
}
h1{
    text-transform: lowercase;
}
h1::first-letter{
    text-transform: uppercase;
}
h2{
    text-transform: lowercase;
}
h2::first-letter{
    text-transform: uppercase;
}
h3{
    text-transform:capitalize;
}
h3::first-letter{
    text-transform: uppercase;
}
h4{
    text-transform: lowercase;
}
h4::first-letter{
    text-transform: uppercase;
}
textarea{
    text-transform: lowercase;
}
textarea::first-letter{
    text-transform: uppercase;
}
main{
    min-width: 1240px;
    max-width: 1240px;
    height: 1380px;
    min-height: 1380px;
    margin-left: auto;
    margin-right: auto;
}
.container{
    height: 100%;
}
.izquierda{
    text-align: center;
    float: left;
    width: 35%;
    height: 121.8%;
    padding: 20px;
    color: white;
    background-color:rgb(57, 143, 165);
}
.izquierda h3{
    text-align: center;
    margin-top: 3vh;
    margin-bottom: 7vh;
    font-weight: lighter;
}
.izquierda ol li {
    margin-bottom: 5vh;
}
.perfilImg{
    margin-top: 5vh;
    margin-bottom: 2vh;
    width: 100%;
    height: 100%;
    background-color: rgb(235, 230, 230);
}
.izquierda h2{
    font-weight: bolder;
    margin-bottom: 2vh;
    margin-top: 10vh;
    text-align: start;
    color: white;
}
.izquierda p{
    color: white;
    font-size: 24px;
    text-align: justify;
}
.nombre{
    text-transform: capitalize;
}
.hrDatos{
    float: right;
    width: 39%;
    height: 2px;
    background-color: white;
    border: none;
    margin-top: 5vh;
}
.hrIdiomas{
    float: right;
    width: 60%;
    height: 2px;
    background-color: white;
    border: none;
    margin-top:12vh;
}
.datos{
    font-weight: lighter;
}
img{
    width:90%;
    border-radius: 50%;
}
.apellido{
    margin-bottom: 7vh;
}
.derecha{
    float: right;
    width: 65%;
    height: 100%;
    text-align: justify;
    padding-top: 2vh;
    padding-right: 10vh;
    padding-left: 6vh;
    color: black;
}
.conPadding{
    padding-left: 3vh;
}
.black{
    color: rgb(57, 55, 55);;
}
.titulo{
    margin-top: 10px;
    padding-bottom: 20px;
    font-size: 28px;
}
.derecha h2{
    margin-top: 5vh;
}
.derecha hr{
    margin-top: 7vh;
    width: 75%;
    float: right;
    height: 1px;
    border: none;
    background-color: rgb(230, 224, 224);
}
.derecha table{
    padding-bottom: 50px;
}
.derecha th{
    padding-bottom: 1vh;
}
.pDescripcion{
    padding-top: 30px;
    font-weight: bolder;
    padding-bottom: 50px;
}
li{
    list-style: none;
    padding-bottom: 1vh;
}
.cv{
    font-size: 30px;
}
table{
    width: 100%;
    height: auto;
    padding-bottom: 1vh;
}
tr{
    padding-bottom: 1.5vh;  
}
.icon{
    width: 10%; 
    text-align: center;
}
.alineacionFin{
    text-align: end;
    float: right;
}
.nombre{
    color: rgb(92, 88, 88);
}
p{
    text-align: start;
}
.margen th{
    margin-bottom: 10px;
}
.margen{
    margin-top: 20px;
    margin-bottom: 20px;
    font-size: 28px;
}
.tableContacto{
    padding-bottom: 3vh;
}
.negrita{
    font-weight: bolder;
}
.formacionFecha{
    width: 130px;
}
</style>

<title>Diseño Cronologico</title>
<main>
    <div class="container">
        <form action="" method="get">
            <div class="izquierda">
                {{#each user}}
                    <img src="http://localhost:3000/img/perfiles/{{imagen}}">
                {{/each}}
                <h3 class="cv">Curriculum vitae</h3>
                <hr class="hrDatos">
                <h2>Datos personales</h2>
                {{#each personal}}
                    <table>
                        <tr>
                            <th class="icon"><img src="http://localhost:3000/img/Iconos/person (1).svg"></th>
                            <th><p class="nombre">{{this.nombre}} {{this.apellido}}</p></th>
                        </tr>
                    </table>
                {{/each}}
            <table>
            <table>
                {{#each user}}
                    <tr>
                        <th class="icon"><img src="http://localhost:3000/img/Iconos/eemail.svg"></th>
                        <th><p>{{this.email}}</p></th>
                    </tr>
                {{/each}}
            </table>
            {{#each personal}}
                <table>
                    <tr>
                        <th class="icon"><img src="http://localhost:3000/img/Iconos/tel.svg"></th>
                        <th><p>{{this.telefono}}</p></th>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th class="icon"><img src="http://localhost:3000/img/Iconos/geo.svg"></th>
                        <th><p>{{this.calle}} {{this.altura}}, {{this.pais}}</p></th>
                    </tr>
                </table>
            {{/each}}
            
            {{#each laboralData}}
                <hr class="hrIdiomas">
                <h2>IDIOMAS</h2>
                <ul>
                    <li>
                        <table>
                            <tr>
                                <th><p>{{this.idioma}}</p></th>
                                <th class="alineacionFin"><p>{{this.nivel}}</p></th>
                            </tr>
                        </table>
                    </li>
                    <li>
                        <table>
                            <tr>
                                <th><p>{{this.idioma2}}</p></th>
                                <th class="alineacionFin"><p>{{this.nivel2}}</p></th>
                            </tr>
                        </table>
                    </li>
                    <li>
                        <table>
                            <tr>
                                <th><p>{{this.idioma3}}</p></th>
                                <th class="alineacionFin"><p>{{this.nivel3}}</p></th>
                            </tr>
                        </table>
                    </li>
                </ul>
            {{/each}}
            </div>

            <div class="derecha"> 
                <h2 class="titulo">Perfíl</h2>
                {{#each descripcionData}}
                    <p class="pDescripcion">{{this.descripcionPerfil}}</p>
                {{/each}}
                <hr>

                <h2 class="margen">Experiencia</h2>
                {{#each laboralData}}
                    <table>
                        <tr>
                            <th class="formacionFecha">
                                <p class="negrita">{{this.desde}} - {{this.hasta}}</p>
                            </th>
                            <th  class="conPadding "><p class="negrita">{{this.puesto}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.empresa}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.descripcion}}</p></th>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th class="formacionFecha">
                                <p class="negrita">{{this.desde2}} - {{this.hasta2}}</p>
                            </th>
                            <th  class="conPadding"><p class="negrita">{{this.puesto2}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.empresa2}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.descripcion2}}</p></th>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th class="formacionFecha">
                                <p class="negrita">{{this.desde3}} - {{this.hasta3}}</p>
                            </th>
                            <th  class="conPadding"><p class="negrita">{{this.puesto3}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.empresa3}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.descripcion3}}</p></th>
                        </tr>
                    </table>
                    <hr>

                    <h2 class="margen">Formación</h2>
                    <table>
                        <tr>
                            <th class="formacionFecha"><p class="negrita">{{this.finalizado}}</p></th>
                            <th  class="conPadding"><p class="negrita">{{this.carrera}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.instituto}}</p></th>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th class="formacionFecha"><p class="negrita">{{this.finalizado2}}</p></th>
                            <th  class="conPadding"><p class="negrita">{{this.carrera2}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.instituto2}}</p></th>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th class="formacionFecha"><p class="negrita">{{this.finalizado3}}</p></th>
                            <th  class="conPadding"><p class="negrita">{{this.carrera3}}</p></th>
                        </tr>
                        <tr>
                            <th class="formacionFecha"><p></p></th>
                            <th  class="conPadding"><p>{{this.instituto3}}</p></th>
                        </tr>
                    </table>
                {{/each}}
            </div>
        </form>
    </div>
</main>



