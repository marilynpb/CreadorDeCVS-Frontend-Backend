<style>
    *{
    box-sizing: border-box;
    padding: 0%;
    margin: 0%;
    font-size: 26px;
}
p{
    text-transform: lowercase;
}
p::first-letter{
    text-transform: uppercase;
}
h1{
    text-transform: lowercase;
}
h1::first-letter{
    text-transform: uppercase;
}
h2{
    text-transform: lowercase;
}
h2::first-letter{
    text-transform: uppercase;
}
h3{
    text-transform:capitalize;
}
h3::first-letter{
    text-transform: uppercase;
}
h4{
    text-transform: lowercase;
}
h4::first-letter{
    text-transform: uppercase;
}
textarea{
    text-transform: lowercase;
}
textarea::first-letter{
    text-transform: uppercase;
}
main{
    min-width: 1240px;
    max-width: 1240px;
    height: 1380px;
    min-height: 1380px;
    margin-left: auto;
    margin-right: auto;
}
.container{
    height: 100%;
}
.header{
    width: 100%;
    height: 300px;
    background-color: rgb(246, 223, 228);
}
.headerIzq{
    width: 35%;
    float: left;
    height: 100%;
    text-align: center;
    padding: 20px;
    background-color: brown;
    background-image: url('../img/wallpapers/fondo.png');
    background-size: 100% 100%;
}
.headerDer{
    float: right;
    color: black;
    width:65%;
    height: 100%;
    padding: 5vh;
}
.headerDer h1{
    color: rgb(36, 35, 35);
    font-size: 55px;
    margin-bottom: 3vh;
    margin-left: 0%;
}
.headerDer p{
    color: rgb(36, 35, 35);
}
.headerDer hr{
    width: 9%;
    color: black;
    height: 3px;
    background-color: black;
    margin-bottom: 3vh;
}
.header img{
    margin-top: 10px;
    width: 70%;
    height: 90%;
    background-color: rgb(158, 153, 153);
}
.bordeColorTop, .bordeColorBottom{
    clear: both;
    width: 100%;
    height: 8vh;
    background-color: rgb(187, 149, 149);
}
.izquierda{
    border-top: 1px solid rgba(191, 150, 150, 0.632);
    border-right: 1px solid rgba(191, 150, 150, 0.632);
    text-align: start;
    float: left;
    width: 35%;
    height: 100%;
    padding: 2vh;
    background-color: rgb(246, 223, 228);
}
.izquierda img{
    background-color: brown;
    padding: 0.5vh;
}
.izquierda h2{
    color: black;
    font-weight: bolder;
    margin-bottom: 20px;
    margin-top: 4vh;
    text-align: start;
    font-size: 33px;
}
.tableContacto th{
    padding-top: 3vh;
}
.datos{
    color: rgb(57, 55, 55);
    font-weight: lighter;
}
.tituloIzq{
    color: black;
    font-weight: bolder;
    margin-top: 2vh;
}
.derecha{
    float: right;
    width: 65%;
    height: 100%;
    background-color: white;
    text-align: justify;
    padding-top: 2vh;
    padding-right: 100px;
    padding-left: 30px;
}
.derecha p{
    padding-bottom: 35px;
}
hr{
    width: 100%;
    margin-bottom: 2vh;
    margin-top: 2vh;
    height: 3px;
    background-color: black;
}
.tarea{
    list-style: circle;
    padding-left: 2vh;
    padding-top: 5vh;
}
.black{
    color: rgb(57, 55, 55);
}
.titulo{
    text-align: start;
    color: black;
    margin-left: 2vh;
    text-transform:capitalize;
}
.derecha h2, h3{    
    color: black;
    text-align: start;
}
.derecha h2{
    margin-bottom: 3vh;
    font-size: 33px;
}
.margen{
    margin-top: 4vh;
}
li{
    list-style: none;
}
table{
    width: 100%;
    height: auto;
    margin-bottom: 0h;
}
.alineacionFin{
    text-align: end;
    float: right;
}
p{
    text-align: start;
}

.paddingTH{
    padding-bottom: 5vh;
}
</style>

<title>Diseño Creativo1</title>
<main>
    <div class="container">
        <form action="" method="get">
            <div class="header">
                <div class="headerIzq">
                {{#each user}}
                    <img src="http://localhost:3000/img/perfiles/{{imagen}}">
                {{/each}}
                </div>

                {{#each personal}}
                    <div class="headerDer">
                        <h1 class="titulo nombre">{{this.nombre}} {{this.apellido}}</h1>
                {{/each}}
                <hr>

                {{#each descripcionData}}
                    <p>{{this.descripcionPerfil}}</p>
                    </div>
                {{/each}}
            </div>

            <div class="izquierda">
                <h2>CONTACTO</h2>
                <table>
                    {{#each personal}}
                        <tr>
                            <th><img src="http://localhost:3000/img/Iconos/geo.svg"></th>
                            <th><p>{{this.calle}} {{this.altura}}, {{this.pais}}</p></th>
                        </tr>
                        <tr class="tableContacto">
                            <th><img src="http://localhost:3000/img/Iconos/tel.svg"></th>
                            <th><p>{{this.telefono}}</p>
                        </tr>
                    {{/each}}

                    {{#each user}}
                        <tr class="tableContacto">
                            <th><img src="http://localhost:3000/img/Iconos/eemail.svg"></th>
                            <th><p>{{this.email}}</p></th>
                        </tr>
                    {{/each}}
                </table>
                <hr>

                <h2>IDIOMAS</h2>
                {{#each laboralData}}
                    <ul>
                        <li>
                            <table>
                                <tr class="tableContacto">
                                    <th><p>{{this.idioma}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel}}</p></th>
                                </tr>
                            </table>
                        </li>
                        <li>
                            <table>
                                <tr class="tableContacto">
                                    <th><p>{{this.idioma2}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel2}}</p></th>
                                </tr>
                            </table>
                        </li>
                        <li>
                            <table>
                                <tr class="tableContacto">
                                    <th><p>{{this.idioma3}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel3}}</p></th>
                                </tr>
                            </table>
                        </li>
                    </ul>
                <hr>
            </div>

            <div class="derecha">
                <h2 class="margen">EXPERIENCIA LABORAL</h2>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.puesto}}</h3></th>
                    </tr>
                    <tr>
                    <td><h3>{{this.empresa}} | {{this.desde}} - {{this.hasta}}</h3></td>
                    </tr>
                    <tr class="tareas">
                        <ul>
                            <li>
                                <td><p>{{this.descripcion}}</p></td>
                            </li>
                        </ul>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.puesto2}}</h3></th>
                    </tr>
                    <tr>
                        <td>
                            <h3>{{this.empresa2}} | {{this.desde2}} - {{this.hasta2}}</h3>
                        </td>
                    </tr>
                    <tr class="tareas">
                        <ul>
                            <li>
                                <td><p>{{this.descripcion2}}</p></td>
                            </li>
                        </ul>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.puesto3}}</h3></th>
                    </tr>
                    <tr>
                        <td>
                            <h3>{{this.empresa3}} | {{this.desde3}} - {{this.hasta3}}</h3>
                        </td>
                    </tr>
                    <tr class="tareas">
                        <ul>
                            <li>
                                <td><p>{{this.descripcion3}}</p></td>
                            </li>
                        </ul>
                    </tr>
                </table>
                <hr>

                <h2 class="margen">FORMACIÓN ACADÉMICA</h2>
                <table>
                    <tr>
                        <td><h3>{{this.instituto}} | {{this.finalizado}}</h3></td>
                    </tr>
                    <tr>
                        <th><h3 class="black paddingTH">{{this.carrera}}</h3></th>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td><h3>{{this.instituto2}} | {{this.finalizado2}}</h3></td>
                    </tr>
                    <tr>
                        <th><h3 class="black paddingTH">{{this.carrera2}}</h3></th>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td><h3>{{this.instituto3}} | {{this.finalizado3}}</h3></td>
                    </tr>
                    <tr>
                        <th><h3 class="black paddingTH">{{this.carrera3}}</h3></th>
                    </tr>
                </table>
                <hr>
                {{/each}}
            </div>
        </form>
    </div>
</main>



