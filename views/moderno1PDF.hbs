<style>
    *{
    box-sizing: border-box;
    padding: 0%;
    margin: 0%;
    font-size: 28px;
}
p{
    text-transform: lowercase;
}
p::first-letter{
    text-transform: uppercase;
}
h1{
    text-transform:capitalize;
}
h1::first-letter{
    text-transform: uppercase;
}
h2{
    text-transform: lowercase;
}
h2::first-letter{
    text-transform: uppercase;
}
h3{
    text-transform:capitalize;
}
h3::first-letter{
    text-transform: uppercase;
}
h4{
    text-transform: lowercase;
}
h4::first-letter{
    text-transform: uppercase;
}
textarea{
    text-transform: lowercase;
}
textarea::first-letter{
    text-transform: uppercase;
}
main{
    min-width: 1240px;
    max-width: 1240px;
    height: 1380px;
    min-height: 1380px;
    margin-left: auto;
    margin-right: auto;
}
.container{
    height: 100%;
}
.header{
    width: 100%;
    min-width: 100%;
    height: 400px;
    min-height: 300px;
    background-color: rgb(4, 173, 122);
}
.headerIzq{
    width: 35%;
    min-width: 35%;
    float: left;
    height: 100%;
    min-height: 100%;
    text-align: center;
}
.headerDer{
    float: right;
    color: white;
    width: 65%;
    min-width: 65%;
    height: 100%;
    min-height: 100%;
    padding: 5vh;
}
.headerDer h1{
    color: white;
    font-size: 5vh;
    margin-bottom: 3vh;
    margin-left: 0%;
}
.headerDer p{
    color: white;
}
.miDescripcion{
    font-size: 30px;
}
.headerDer hr{
    width: 9%;
    color: rgb(74, 72, 72);
    height: 1px;
    background-color: rgb(74, 72, 72);
    margin-bottom: 3vh;
    border: none;
}
.header img{
    width: 100%;
    height: 100%;
    background-color: rgb(243, 239, 239);
}
.izquierda{
    text-align: start;
    float: left;
    min-width: 35%;
    width: 35%;
    height: 92.5%;
    min-height: 92.5%;
    padding: 2vh;
    background-color: rgba(163, 230, 210, 0.872);
}
.izquierda img{
    background-color: rgb(5, 80, 57);    
    padding: 0.5vh;
}
.izquierda h2{
    color: black;
    font-weight: bolder;
    margin-bottom: 30px;
    margin-top: 4vh;
    text-align: start;
    font-size: 30px;
}
.tableContacto th{
    padding-top: 20px;
}
.datos{
    color: rgb(57, 55, 55);
    font-weight: lighter;
}
.tituloIzq{
    color: black;
    font-weight: bolder;
    margin-top: 2vh;
}
.derecha{
    float: right;
    width: 65%;
    min-width: 65%;
    height: 92.5%;
    min-height: 92.5%;
    background-color: white;
    text-align: justify;
    padding-top: 2vh;
    padding-right: 6vh;
    padding-left: 6vh;
}
.derecha .colorGreen{
    color: rgb(5, 80, 57);
}
hr{
    width: 100%;
    margin-bottom: 2vh;
    margin-top: 2vh;
    height: 1.5px;
    border: none;
    background-color: rgb(5, 80, 57);    
}
.tarea{
    list-style: circle;
    padding-left: 2vh;
    padding-top: 5vh;
}
.black{
    color: rgb(57, 55, 55);
}
.titulo{
    text-align: start;
    color: black;
    margin-left: 2vh;
}
.derecha h2, h3{    
    color: black;
    text-align: start;
}
.derecha h2{
    margin-bottom: 3vh;
    font-size: 30px;
}
.margen{
    margin-top: 20px;
}
li{
    list-style: none;
}
.derecha table{
    padding-bottom: 20px;
}
table{
    width: 100%;
    height: auto;
    margin-bottom: 0h;
}
.alineacionFin{
    text-align: end;
    float: right;
}
p{
    text-align: start;
}
</style>


<title>Diseño Moderno1</title>
<main>
    <div class="container">
        <form action="" method="get">
            <div class="header">
                <div class="headerIzq">
                {{#each user}}
                    <img src="http://localhost:3000/img/perfiles/{{imagen}}">
                {{/each}}
                </div>
                <div class="headerDer">
                    {{#each personal}}
                        <h1 class="titulo nombre">{{this.nombre}} {{this.apellido}}</h1>
                        <hr>
                    {{/each}}
                    {{#each descripcionData}}
                        <p class="miDescripcion">{{this.descripcionPerfil}}</p>
                    {{/each}}
                </div>
            </div>

            <div class="izquierda">
                {{#each personal}}
                    <h2>CONTACTO</h2>
                    <table>
                        <tr>
                            <th><img src="http://localhost:3000/img/Iconos/geo.svg"></th>
                            <th><p>{{this.calle}} {{this.altura}}, {{this.pais}}</p></th>
                        </tr>
                        <tr class="tableContacto">
                            <th><img src="http://localhost:3000/img/Iconos/tel.svg"></th>
                            <th><p>{{this.telefono}}</p>
                        </tr>
                {{/each}}
                {{#each user}}
                    <tr class="tableContacto">
                            <th><img src="http://localhost:3000/img/Iconos/eemail.svg"></th>
                            <th><p>{{this.email}}</p></th>
                        </tr>
                    </table>
                {{/each}}
                <hr>

                <h2>IDIOMAS</h2>
                {{#each laboralData}}
                    <ul>
                        <li>
                            <table>
                                <tr>
                                    <th><p>{{this.idioma}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel}}</p></th>
                                </tr>
                            </table>
                        </li>
                        <li>
                            <table>
                                <tr class="tableContacto">
                                    <th><p>{{this.idioma2}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel2}}</p></th>
                                </tr>
                            </table>
                        </li>
                        <li>
                            <table>
                                <tr class="tableContacto">
                                    <th><p>{{this.idioma3}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel3}}</p></th>
                                </tr>
                            </table>
                        </li>
                    </ul>
                <hr>
            </div>

            <div class="derecha">
                <h2 class="margen colorGreen">EXPERIENCIA LABORAL</h2>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.puesto}}</h3></th>
                    </tr>
                    <tr>
                        <td><h3>{{this.empresa}} {{this.desde}} {{this.hasta}}</h3></td>
                    </tr>
                    <tr class="tareas">
                        <ul>
                            <li>
                                <td><p>{{this.descripcion}}</p></td>
                            </li>
                        </ul>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.puesto2}}</h3></th>
                    </tr>
                    <tr>
                        <td><h3>{{this.empresa2}} {{this.desde2}} {{this.hasta2}}</h3></td>
                    </tr>
                    <tr class="tareas">
                        <ul>
                            <li>
                                <td><p>{{this.descripcion2}}</p></td>
                            </li>
                        </ul>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.puesto3}}</h3></th>
                    </tr>
                    <tr>
                        <td><h3>{{this.empresa3}} {{this.desde3}} {{this.hasta3}}</h3></td>
                    </tr>
                    <tr class="tareas">
                        <ul>
                            <li>
                                <td><p>{{this.descripcion3}}</p></td>
                            </li>
                        </ul>
                    </tr>
                </table>
                <hr>

                <h2 class="margen colorGreen">FORMACIÓN ACADÉMICA</h2>
                <table>
                    <tr>
                        <td><h3>{{this.instituto}} {{this.finalizado}}</h3></td>
                    </tr>
                    <tr>
                        <th><h3 class="black">{{this.carrera}}</h3></th>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td><h3>{{this.instituto2}} {{this.finalizado2}}</h3></td>
                    </tr>
                    <tr>
                        <th><h3 class="black">{{this.carrera2}}</h3></th>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td><h3>{{this.instituto3}} {{this.finalizado3}}</h3></td>
                    </tr>
                    <tr>
                        <th><h3 class="black">{{this.carrera3}}</h3></th>
                    </tr>
                </table>
                {{/each}}
            </div>
        <form>
    </div>
</main>



